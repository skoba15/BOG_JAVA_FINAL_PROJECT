<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>addCountry</servlet-name>
        <servlet-class>ge.bog.finalproject.api.AddCountry</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCountry</servlet-name>
        <url-pattern>/addCountry</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addCompany</servlet-name>
        <servlet-class>ge.bog.finalproject.api.AddCompany</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCompany</servlet-name>
        <url-pattern>/addCompany</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addCompanyToCountry</servlet-name>
        <servlet-class>ge.bog.finalproject.api.addCompanyToCountry</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCompanyToCountry</servlet-name>
        <url-pattern>/addCompanyToCountry</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>removeCompanyFromCountry</servlet-name>
        <servlet-class>ge.bog.finalproject.api.RemoveCompanyFromCountry</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeCompanyFromCountry</servlet-name>
        <url-pattern>/removeCompanyFromCountry</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getCompaniesFromCountry</servlet-name>
        <servlet-class>ge.bog.finalproject.api.GetCompaniesFromCountry</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getCompaniesFromCountry</servlet-name>
        <url-pattern>/getCompaniesFromCountry</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getCompanyNetWorth</servlet-name>
        <servlet-class>ge.bog.finalproject.api.GetCompanyNetWorth</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getCompanyNetWorth</servlet-name>
        <url-pattern>/getCompanyNetWorth</url-pattern>
    </servlet-mapping>
</web-app>